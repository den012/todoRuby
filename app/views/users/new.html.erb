<h1>Sign Up page 0</h1>

<%= form_with model: @user, url: signup_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <%= recaptcha_tags %>

  <%= form.submit "Sign Up" %>
<% end %>